<div class='card-container'>
  <div class='accordion'>
    <div class='accordion-item'> {{title}} </div>
    <div class='accordion-item action-icon {{if show 'rotated'}}' {{action 'toggleAccordion'}}> + </div>
  </div>
  <div class='card-content-container {{unless show 'hide'}}'>
    {{#if show}}
      {{yield}}
    {{/if}}
  </div>
</div>
